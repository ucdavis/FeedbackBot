<div class="newWrapper">
    <div id="newIssueBox">
        @using (Html.BeginForm("search", "Home",
                        new { appName = @ViewData["AppName"] }))
            {
            <input type="text" id="searchInput" placeholder="Search issues..." name="searchInput" />
            <input type="hidden" name="appName" value="@ViewData["AppName"]" style="display:none;" />
            <button type="submit">Submit</button>
            }
    </div>
</div>